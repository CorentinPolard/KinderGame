{% extends 'base.html.twig' %}

{% block title %}
Game category
{% endblock %}

{% block main %}

<div class="dropdown">
  <button class="dropbtn">Trier par cat√©gorie</button>
  <div class="dropdown-content">
    <a href="{{ path('shop_products') }}">Tous les jeux</a>
    {% for category in categories %}
    <a href="{{ path('shop_category', {category_id: category.id}) }}">{{ category.label }}</a>
    {% endfor %}
  </div>
</div>

<div class="row mt-3">

  {% for product in products %}

  <div class="col-lg-4 mt-3">
    <div class="card">
      <img src="{{ asset('uploads/medias/' ~ product.media) }}" class="card-img-top img-card" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{ product.label }}</h5>
        <p class="card-text description">{{ product.description }}</p>
        <a href="{{path('shop_item',{item: product.label})}}" class="btn btn-primary">Voir le jeu</a>
      </div>
    </div>
  </div>

  {% endfor %}

</div>

{% endblock %}